<Window
    x:Class="RelationalAlgebra.AddTableWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RelationalAlgebra"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="WndAddTable"
    Width="450"
    Height="200"
    AllowsTransparency="True"
    FontSize="20"
    Icon="/Images/icon.ico"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="#182d33"
        BorderBrush="Gray"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid MouseDown="Grid_MouseDown">
                <TextBlock MouseDown="Grid_MouseDown" />
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock
                        Margin="0,4"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Text="Новая таблица" />
                </StackPanel>
                <StackPanel
                    Margin="5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Border Style="{StaticResource BrdWindowPollUp}">
                        <Image
                            Name="ImgPollUp"
                            MouseDown="ImgPollUp_MouseDown"
                            Source="Images/minsizewhite.png"
                            Style="{StaticResource ImgWindow}" />
                    </Border>
                    <Border Style="{StaticResource BrdWindowClose}">
                        <Image
                            Name="ImgClose"
                            MouseDown="ImgClose_MouseDown"
                            Source="Images/closewhite.png"
                            Style="{StaticResource ImgWindow}" />
                    </Border>
                </StackPanel>
            </Grid>
            <Border
                Grid.Row="1"
                Margin="5"
                Background="#E5DED2"
                BorderBrush="DarkGray"
                BorderThickness="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Margin="7" Text="Имя таблицы" />
                            <TextBlock Margin="7" Text="Количество столбцов" />
                        </StackPanel>
                        <StackPanel>
                            <TextBox
                                Name="TbxNameTable"
                                Width="180"
                                Height="32"
                                Margin="5" />
                            <TextBox
                                Name="TbxCountColumns"
                                Width="180"
                                Height="32"
                                Margin="5"  PreviewTextInput="TbxCountColumns_PreviewTextInput"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Name="BtnOk"
                            Width="100"
                            Height="32"
                            Margin="5"
                            Background="#386977"
                            Click="BtnOk_Click"
                            Content="ОК"
                            Foreground="White" />
                        <Button
                            Name="BtnClose"
                            Width="100"
                            Height="32"
                            Margin="5"
                            Background="#FFA809"
                            Click="BtnClose_Click"
                            Content="Отмена" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
